{
	"name": "fangorn-sdk",
	"version": "2026.02.24.2",
	"description": "A zero-knowledge conditional access control framework",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/fangorn-network/fangorn.git"
	},
	"bin": {
		"fangorn": "lib/cli/cli.js"
	},
	"license": "MIT",
	"type": "module",
	"main": "lib/index.js",
	"files": [
		"lib/"
	],
	"scripts": {
		"build": "tsdown",
		"format": "prettier . --write",
		"lint": "eslint . --max-warnings 0",
		"prepare": "husky",
		"test": "dotenvx run -f .env -- vitest run",
		"test:e2e": "dotenvx run -f .env -- vitest run --config vitest.e2e.config.ts",
		"tsc": "tsc",
		"deploy": "dotenvx run -f .env -- tsx deploy.ts",
		"prepare:cli": "npm run build",
		"fangorn": "dotenvx run -f .env -- node dist/src/cli/cli.js"
	},
	"lint-staged": {
		"*": "prettier --ignore-unknown --write"
	},
	"devDependencies": {
		"@dotenvx/dotenvx": "^1.51.1",
		"@eslint/js": "9.39.1",
		"@release-it/conventional-changelog": "10.0.2",
		"@types/node": "24.10.1",
		"@vitest/coverage-v8": "4.0.15",
		"@vitest/eslint-plugin": "1.5.1",
		"blake3-js": "^0.0.5",
		"dotenv-cli": "^11.0.0",
		"eslint": "9.39.1",
		"husky": "9.1.7",
		"lint-staged": "16.2.7",
		"patch-package": "^8.0.1",
		"postinstall-postinstall": "^2.1.0",
		"prettier": "3.7.3",
		"release-it": "19.0.6",
		"tsdown": "0.16.8",
		"tsx": "^4.21.0",
		"typescript": "5.8.3",
		"typescript-eslint": "8.48.1",
		"vite": "^7.2.7",
		"vite-plugin-node-polyfills": "0.25.0",
		"vitest": "4.0.15",
		"write-file-atomic": "5.0.1"
	},
	"packageManager": "pnpm@10.4.0",
	"engines": {
		"node": ">=20.19.0"
	},
	"dependencies": {
		"@a2a-js/sdk": "^0.3.10",
		"@aztec/bb.js": "3.0.0-rc.2",
		"@clack/prompts": "^1.0.1",
		"@lit-protocol/access-control-conditions": "^8.0.2",
		"@lit-protocol/auth": "^8.2.2",
		"@lit-protocol/auth-helpers": "^8.2.1",
		"@lit-protocol/lit-client": "^8.3.1",
		"@lit-protocol/networks": "^8.4.1",
		"@noble/hashes": "^2.0.1",
		"@noir-lang/noir_js": "1.0.0-beta.19",
		"@rolldown/binding-linux-x64-gnu": "1.0.0-beta.59",
		"@x402/core": "^2.2.0",
		"@x402/evm": "^2.2.0",
		"agent0-sdk": "^1.5.3",
		"buffer": "^6.0.3",
		"commander": "^14.0.3",
		"dotenv": "^17.2.3",
		"ethers": "^6.16.0",
		"imurmurhash": "^0.1.4",
		"multiformats": "^13.4.2",
		"node-localstorage": "^3.0.5",
		"pinata": "^2.5.2",
		"solc": "^0.8.28"
	},
	"peerDependencies": {
		"viem": "2.38.3"
	},
	"pnpm": {
		"overrides": {
			"write-file-atomic": "7.0.0"
		}
	}
}
